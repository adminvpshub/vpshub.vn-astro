---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-24 bg-slate-950 border-t border-white/5">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">{t('marketing.title')}</h2>
      <p class="mt-4 text-slate-400">Powered by industry-leading technologies.</p>
    </div>

    <div class="flex flex-wrap justify-center gap-8 opacity-70 grayscale transition-all duration-500 hover:grayscale-0 hover:opacity-100">
      <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">Linux</span>
      </div>
      <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">WordPress</span>
      </div>
      <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">PHP</span>
      </div>
      <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">Node.js</span>
      </div>
      <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">Plesk</span>
      </div>
       <div class="flex h-16 w-32 items-center justify-center rounded-lg bg-white/5 px-4">
        <span class="text-xl font-bold text-white">VMware</span>
      </div>
    </div>
    
    <div class="mt-24 grid gap-12 lg:grid-cols-2 items-center">
      <div>
        <h3 class="text-2xl font-bold text-white mb-4">Digital Transformation</h3>
        <p class="text-slate-400 mb-6 leading-relaxed">
          Support digital transformation for businesses, providing consultation and implementation of workflow and automation solutions. We help you digitize workflows within your business to increase efficiency and reduce costs.
        </p>
         <h3 class="text-2xl font-bold text-white mb-4 mt-8">Free Hosting for RnD</h3>
        <p class="text-slate-400 mb-6 leading-relaxed">
           A highly affordable option for IT students or startup R&D teams â€” with 99% server uptime. Create development environments for developers, learning, and research.
        </p>
      </div>
      <div class="relative rounded-2xl bg-gradient-to-br from-blue-600/20 to-purple-600/20 p-8 border border-white/10">
         <div class="absolute inset-0 bg-grid-white/5 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))]"></div>
         <div class="relative z-10">
            <div class="rounded-lg bg-slate-900 border border-white/10 p-6 shadow-2xl">
                <div class="flex items-center gap-4 mb-4">
                    <div class="h-3 w-3 rounded-full bg-red-500"></div>
                    <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
                    <div class="h-3 w-3 rounded-full bg-green-500"></div>
                </div>
                <div class="space-y-2 font-mono text-sm">
                    <div class="text-green-400">$ ssh root@vpshub.vn</div>
                    <div class="text-slate-300">Welcome to VPSHUB Ubuntu 22.04.2 LTS</div>
                    <div class="text-slate-300">System load: 0.05</div>
                    <div class="text-slate-300">Memory usage: 12%</div>
                    <div class="text-slate-300">Swap usage: 0%</div>
                    <div class="text-blue-400">root@vpshub:~# <span class="animate-pulse">_</span></div>
                </div>
            </div>
         </div>
      </div>
    </div>
  </div>
</section>
